@model CategoryListDTO
@{
    ViewData["Title"] = "Index";
}

<div class="container mt-5">
    <div class="row">
        @foreach (var item in Model.Items)
        {
            <div class="col-lg-3">
                <a asp-controller="category" asp-action="detail"><img src="~/image/@item.Image" style="width: 200px; height: 250px;" /></a>
                <h5 class="mt-3">@item.Name</h5>
                <span>@item.Author.Name</span>
                <p>@item.Price</p>
            </div>
        }
    </div>
</div>
